div.sliders
    ul.items-ctn
        li(ng-repeat="slide in $ctrl.items track by $index")
            .image(ng-style="{'background-image':'url({{slide}})'}" ng-show="$ctrl.currentIndex == $index")
    ul.nav-ctn
        li.prev(ng-click="$ctrl.prev()") &#60
        li.next(ng-click="$ctrl.next()") &#62
